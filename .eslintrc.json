{
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": "airbnb",
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "rules": {
    "comma-dangle": [
      "error",
      {
        "arrays": "ignore",
        "objects": "ignore",
        "imports": "ignore",
        "exports": "ignore",
        "functions": "ignore"
      }
    ],
    "class-methods-use-this": [
      2,
      {
        "exceptMethods": [
          "checkMessage"
        ]
      }
    ]
  }
}
